    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug update-changelog tests",
            "cwd": "${workspaceFolder}/update-changelog/",
            "program": "${workspaceFolder}/update-changelog/node_modules/mocha/bin/_mocha",
            "args": [
                "-r",
                "ts-node/register",
                "--colors",
                "${workspaceFolder}/update-changelog/__tests__/*.spec.ts",
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "protocol": "inspector"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug release-to-slack tests",
            "cwd": "${workspaceFolder}/release-to-slack/",
            "program": "${workspaceFolder}/release-to-slack/node_modules/mocha/bin/_mocha",
            "args": [
                "-r",
                "ts-node/register",
                "--colors",
                "${workspaceFolder}/release-to-slack/__tests__/*.spec.ts",
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "protocol": "inspector"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug mdb-realm tests",
            "cwd": "${workspaceFolder}/mdb-realm/",
            "program": "${workspaceFolder}/mdb-realm/node_modules/mocha/bin/_mocha",
            "args": [
                "-r",
                "ts-node/register",
                "--colors",
                "${workspaceFolder}/mdb-realm/__tests__/*.spec.ts",
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "protocol": "inspector"
        }
    ]
}